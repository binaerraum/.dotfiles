general {
  output_format = "i3bar"
  colors = true
  color_good = "#eeeeee"
  color_degraded = "#888888"
  color_bad = "#ff0066"
  interval = 5
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "cpu_temperature 0"
order += "volume master"
order += "tztime local"

wireless _first_ {
  format_up = "wifi%quality"
  format_down = "no wifi"
}

ethernet _first_ {
  format_up = "eth"
  format_down = "no eth"
}

volume master {
  format = "vol %volume"
  format_muted = "vol muted"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

battery all {
  format = "bat %percentage"
  low_threshold = 20
  threshold_type = percentage
  integer_battery_capacity = true
  last_full_capacity = true
  hide_seconds = true
}

tztime local {
  format = "%d.%m %H:%M"
  timezone = "Europe/Berlin"
}

